@model IEnumerable<WebApplication5.Models.User>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<p>
   <form method="post">
       @if (ViewBag.Name != null)
       {
       <input class="form-control" type="text" name="name" placeholder="User Name" value="@ViewBag.Name" />
       }
       else
       {
       <input class="form-control" type="text" name="name"  placeholder="User Name"/>
       }
       <br />
       <select class="form-control" name="dep">
           @if (ViewBag.dep != null)
           {
               <option value="@ViewBag.dep.Id">
                   @ViewBag.dep.Name
               </option>
           }
           @foreach (var i in ViewBag.deps)
           {

               <option value="@i.Id">
                   @i.Name
               </option>
           }
       </select>
       <br />
       <input class="btn-primary" type="submit" value="Search" />
   </form>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Username)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Department)
        </th>
        <th></th>
    </tr>
    @if (Model.Count() == 0) { 
         <tr>
        <td>
            No result found
        </td>
   </tr>
    }

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Username)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Department.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
